source 'https://rubygems.org'

gem 'rails', '~> 3.2.11'

gem 'sqlite3'

group :production do
  gem 'mysql2'
end

group :test do
  gem 'test-unit'
  gem 'minitest'
end

gem 'json'

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

#=======================================
# Authentication
gem 'devise'
# Voting
gem 'activerecord-reputation-system', :require => 'reputation_system'
# Imgur uploads
gem 'imgur'
# Sunspot (for searching)
gem 'sunspot_rails'
gem 'sunspot_solr'
# Pagination
gem 'will_paginate'
gem 'will_paginate-bootstrap'
# Admin interface
gem 'activeadmin'
#=======================================

gem 'rb-readline', '~> 0.4.2'
gem 'therubyracer'
